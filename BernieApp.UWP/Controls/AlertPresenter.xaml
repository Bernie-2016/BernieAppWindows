        <ScrollViewer HorizontalAlignment="Stretch" 
                      ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <Grid x:Name="grid" HorizontalAlignment="Stretch" Margin="10" MinWidth="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="titleBox" Text="{Binding Title}"
                   Margin="10,0,10,20" HorizontalAlignment="Center"
                   TextWrapping="Wrap" Style="{ThemeResource SubheaderTextBlockStyle}"/>
                <TextBlock x:Name="descriptionBox" Grid.Row="1" Text="{Binding ShortDescription}"
                   Margin="10,0,0,20" HorizontalAlignment="Center"
                   TextWrapping="Wrap"/>
                <!--<WebView Grid.Row="2" x:Name="webView"
