<UserControl
    x:Class="BernieApp.UWP.Controls.AlertPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BernieApp.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <!--<UserControl.DataContext>
        <Binding Path="ActionsViewModel" Source="{StaticResource Locator}" />
    </UserControl.DataContext>-->

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Title}"
                               Margin="10,0,0,20"
                               TextWrapping="NoWrap" Style="{ThemeResource SubheaderTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Text="{Binding Body}" TextWrapping="Wrap"/>
        <WebView Grid.Row="2" local:WebViewExtensions.HtmlString="{Binding WebViewSource}" Height="Auto" Width="Auto"/>
    </Grid>
</UserControl>
